<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="fontRoboto400" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/roboto_serif_regular_400</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="fontRoboto500" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/roboto_serif_medium_500</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="fontRoboto600" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/roboto_serif_semi_bold_600</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="fontRoboto700" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/roboto_serif_bold_700</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_round_white_top_bottom</item>
    </style>

    <style name="dialog_transparent_width" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
    </style>

    <style name="CustomNumberPicker" parent="Theme.AppCompat.Light">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/roboto_serif_bold_700</item>
        <item name="colorControlNormal">#00000000</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textSize">22sp</item>
    </style>
</resources>